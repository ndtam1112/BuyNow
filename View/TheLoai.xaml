<Window x:Class="View.TheLoai"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Title="TheLoai" Height="740" Width="450">
    <Grid>
        <Grid>
            <Border Height="740" Width="450" CornerRadius="30">
                <Border.Background>
                    <ImageBrush ImageSource="image\thumb\thumb-4.jpg" />
                </Border.Background>
            </Border>
        </Grid>
        <Border>

            <ScrollViewer VerticalScrollBarVisibility="Hidden"
                              Grid.ColumnSpan="2"
                              Grid.RowSpan="4">
                <StackPanel  Orientation="Vertical">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"></RowDefinition>
                            <RowDefinition Height="400"></RowDefinition>
                            <RowDefinition Height="400"></RowDefinition>
                            <RowDefinition Height="400"></RowDefinition>
                            <RowDefinition Height="400"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Ten The Loai" TextAlignment="Center"
                           Grid.ColumnSpan="2"
                           FontSize="30"></TextBlock>

                        <Border Grid.Row="1" Width="200" Height="auto" />
                        <Border Grid.Row="1" Grid.Column="2"  Width="200" Height="auto"></Border>
                        <Border Grid.Row="2" Width="200" Height="auto"></Border>
                        <Border Grid.Row="2" Grid.Column="2"  Width="200" Height="auto"></Border>
                        <Border Grid.Row="3" Width="200" Height="auto"></Border>
                        <Border Grid.Row="3" Grid.Column="2"  Width="200" Height="auto"></Border>
                        <Border Grid.Row="4" Width="200" Height="auto"></Border>
                        <Border Grid.Row="4" Grid.Column="2" Width="200" Height="auto"></Border>

                        <StackPanel Grid.Column="1">
                            <Button Height="25" Width="25"
                        VerticalAlignment="Top"
                        x:Name="btnClose"
                        HorizontalAlignment="Right"
                        Margin="0,5,10,0"
                        BorderThickness="0" 
                        Click="btnClose_Click"
                        >
                                <Button.Background>
                                    <ImageBrush ImageSource="image\icon\close-window-2.png"/>
                                </Button.Background>
                               

                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Button Height="25" Width="25"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="0,5,40,0"
                        x:Name="btnMinimize"
                        Click="btnMinimized_Click"
                        BorderThickness="0"
                        >
                               
                                <Button.Background>
                                    <ImageBrush ImageSource="image\icon\macos-minimize-2.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Border Width="400"
                Height="50"
                Background="White"
                CornerRadius="25"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="25,0,25,40"
                        Grid.ColumnSpan="2"
                        Grid.Row="3">
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>
                        </ColumnDefinition>
                        <ColumnDefinition>
                        </ColumnDefinition>
                        <ColumnDefinition>
                        </ColumnDefinition>
                        <ColumnDefinition>
                        </ColumnDefinition>
                        <ColumnDefinition>
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Background="Transparent"
                            Height="50"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                            Grid.Column="0">

                        <!--Click="New_Click"-->

                        <Image Source="image\icon\new-2.png"></Image>
                    </Button>
                    <Button Background="Transparent"
                            Height="50"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                            Grid.Column="1">

                        <!--Click="Category_Click"-->

                        <Image Source="image\icon\category.png"></Image>
                    </Button>

                    <Button Background="Transparent"
                            Height="50"
                            BorderThickness="0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            x:Name="btnHome"
                            Click="btnHome_click"
                            Grid.Column="2">

                       

                        <Image Source="image\thumb\logo-1.png" />
                    </Button>

                    <Button Background="Transparent"
                            Height="50"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                            Grid.Column="3">

                        <!--Click="Search_Click"-->

                        <Image Source="image\icon\search.png" ></Image>
                    </Button>

                    <Button Background="Transparent"
                            Height="50"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                            Grid.Column="4">

                        <!--Click="Account_Click"-->

                        <Image Source="image\icon\account.png" ></Image>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>