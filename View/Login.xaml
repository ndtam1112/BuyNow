<Window x:Class="View.Login"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Title="Login" Height="740" Width="450">
    <Grid>
        <Grid>
            <Border Height="740" Width="450" CornerRadius="30" Background="White">
            </Border>
        </Grid>
        
        <StackPanel>
            <Button Height="25" Width="25"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="0,5,10,0"
                        BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="image\icon\close-window-2.png" />
                </Button.Background>
            </Button>
        </StackPanel>
        <StackPanel>
            <Button Height="25" Width="25"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="0,5,40,0"
                        BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="image\icon\macos-minimize-2.png" />
                </Button.Background>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="40,60,40,40">
                    <TextBlock Text="Welcome" FontSize="50" FontFamily="Ink Free"></TextBlock>
                    <TextBlock FontSize="50"><Run FontFamily="Ink Free" Text="to"/><Run Text=" "/><Run FontFamily="Nirmala UI Semilight" Text="BuyNow."/></TextBlock>
                </StackPanel>
                <StackPanel Margin="0,40,0,0">
                    <Image Source="image\icon\shopping_bag.png" Stretch="UniformToFill" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-26.565"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </StackPanel>
            <TextBlock Width="350" Height="60" Margin="0,110,0,0">
                <Image Source="image\icon\account.png" Height="40"></Image>
                <TextBox Margin="5,0,0,0" Text="Username"  Width="350" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
            </TextBlock>
            <TextBlock Width="350" Height="60" >
                <Image Source="image\icon\password.png" Height="40"></Image>
                <TextBox Margin="5,0,0,0" Text="Password"  Width="350" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
            </TextBlock>
            <Button Content="Đăng nhập" FontSize="15" Height="50" Width="150" 
                    materialDesign:ButtonAssist.CornerRadius="7" Background="Gray" 
                    BorderThickness="1" Foreground="AliceBlue"  BorderBrush="DarkGray"
                    Margin="0,50,0,0">
            </Button>
            <StackPanel Orientation="Horizontal" Margin="50,50,0,0">
                <TextBlock Text="Bạn đã có tài khoản chưa?" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <Button Background="Transparent" BorderThickness="0"  Foreground="Black" Content="Đăng ký ngay" FontSize="18"></Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>