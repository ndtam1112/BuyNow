<UserControl x:Class="View.User_Control.ItemProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Border Padding="10" CornerRadius="10" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="5" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Margin="10" Source="{Binding Image}" Stretch="UniformToFill"/>
            <StackPanel Grid.Row="1">
                <TextBlock Text="{Binding NameProduct}" Style="{DynamicResource NameProductStyle}"/>
                <TextBlock Text="{Binding PriceProduct}" Style="{DynamicResource PriceProductStyle}"/>
            </StackPanel>
            
        </Grid>
        
            
    </Border>
</UserControl>
